{
  "name": "react-parcel-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate to create react app with parcel",
  "main": "src/index.html",
  "author": "Frederic Godin",
  "license": "MIT",
  "engines": {
    "node": ">=11.7.0"
  },
  "engineStrict": true,
  "scripts": {
    "start": "parcel src/index.html",
    "test": "jest",
    "build": "rm -rf ./dist && parcel build src/index.html",
    "pre-commit": "lint-staged",
    "commit": "yarn pre-commit && git-cz"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "alias": {
    "src": "./src"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.4",
    "@types/react-dom": "^16.9.1",
    "autoprefixer": "^9.6.1",
    "commitizen": "^4.0.3",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.1",
    "node-sass": "^4.12.0",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "parcel-plugin-compress": "^1.0.10",
    "parcel-plugin-svg-sprite": "^1.3.0",
    "postcss-modules": "^1.4.1",
    "prettier": "^1.18.2",
    "sass": "^1.23.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "react": "^16.10.1",
    "react-dom": "^16.10.1"
  },
  "svgSpriteOptions": {
    "exclude": [
      "**/fonts/**/*"
    ]
  }
}
